---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getEntryBySlug } from "astro:content";

const entry = await getEntryBySlug("wishlist", "index");
const { contact_form_action } = config.params;
const { title, description, info } = entry?.data;
---

<Base title={title} description={description}>
  <section class="section">
    <div class="container">
      <h1 class="text-center font-normal" set:html={markdownify(title)} />
      <div class="section column pb-0  m-auto">
        <div class="col-12 md:col-6 m-auto text-center">
          <p class="mt-0" set:html={markdownify(info?.description)} />
          <ul class="contact-list mt-5 list-none pl-0">
            {
              info?.contacts?.map((contact: string) => (
                <li>
                  <strong class="text-dark" set:html={markdownify(contact)} />
                </li>
              ))
            }
          </ul>
        </div>
        <div class="col-12 md:col-6 m-auto  lowercase mt-5">
            <script async src="https://eocampaign1.com/form/abd9dee0-d702-11ee-9e4c-45e47cae5c0b.js" data-form="abd9dee0-d702-11ee-9e4c-45e47cae5c0b"></script>
        </div>
      </div>
    </div>
  </section>

</Base>
